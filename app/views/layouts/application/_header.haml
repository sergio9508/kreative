%header
  .header-service
    .container
      .logo.animated.pulse
        = link_to image_tag('logo.png', alt: 'cafeina-digital-studio'), root_url, rel: 'canonical'
      .menu-header.animated.bounceInRight
        .hamburger
          .line
          .line
          .line
      %nav
        %ul.nav-links.animated.bounceInRight
          
          %li
            - if request.path.match? '/abouts'
              = link_to 'Nosotros', abouts_url, class: 'current'
            - else
              = link_to 'Nosotros', abouts_url
          
          %li
            = link_to 'Contact', '/#coffeetalk'
