!!! 5
%html{ lang: I18n.locale }
  %head
    
    = display_meta_tags
    = javascript_include_tag :application
    = stylesheet_link_tag :application
    = csrf_meta_tags
    = render partial: 'layouts/application/analytics'
    -# %link{rel: "canonical", href: root_url }
  %body
   
    - unless (request.url == root_url) || request.path.eql?('/')
      = render partial: 'layouts/application/header'
    %main
      = yield
    = render partial: 'layouts/application/footer'
